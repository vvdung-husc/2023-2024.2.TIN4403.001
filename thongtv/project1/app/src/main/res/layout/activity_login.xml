<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0E79C9"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="83dp">

        <ImageView
            android:id="@+id/fmt_image"
            android:layout_width="176dp"
            android:layout_height="144dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/fmt" />

        <EditText
            android:id="@+id/username"
            android:layout_width="387dp"
            android:layout_height="59dp"
            android:layout_below="@id/fmt_image"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:drawableStart="@drawable/baseline_person_outline_24"
            android:drawablePadding="10dp"
            android:hint="@string/email_phone_username"
            android:inputType="textEmailAddress"
            android:padding="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/password_toggle"
            android:layout_width="387dp"
            android:layout_height="59dp"
            android:layout_below="@id/username"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:drawableStart="@drawable/baseline_lock_24"
            android:drawablePadding="10dp"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/quenmatkhau"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_below="@+id/password_toggle"
            android:gravity="right"
            android:text="@string/forgot_password"
            android:textColor="#8CAAB9"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="190dp"
            android:layout_height="85dp"
            android:layout_below="@+id/quenmatkhau"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:backgroundTint="#FED36A"
            android:text="@string/login1"
            android:textSize="18sp"
            app:cornerRadius="5dp" />

        <TextView
            android:id="@+id/hoac"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/loginButton"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="@string/don_t_have_an_account"
            android:textColor="#8CAAB9"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/btnSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hoac"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-2dp"
            android:gravity="center"
            android:text="@string/sign_up"
            android:textColor="#FED36A"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/fmt_image"
        android:layout_width="176dp"
        android:layout_height="144dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/fmt" />

    <EditText
        android:id="@+id/username"
        android:layout_width="387dp"
        android:layout_height="59dp"
        android:layout_below="@id/fmt_image"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:drawableStart="@drawable/baseline_person_outline_24"
        android:drawablePadding="10dp"
        android:hint="@string/email_phone_username"
        android:inputType="textEmailAddress"
        android:padding="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/password_toggle"
        android:layout_width="387dp"
        android:layout_height="59dp"
        android:layout_below="@id/username"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:drawableStart="@drawable/baseline_lock_24"
        android:drawablePadding="10dp"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/quenmatkhau"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_below="@+id/password_toggle"
        android:gravity="right"
        android:text="@string/forgot_password"
        android:textColor="#8CAAB9"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@+id/quenmatkhau"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FED36A"
        android:text="@string/login1"
        android:textSize="18sp"
        app:cornerRadius="5dp" />

    <TextView
        android:id="@+id/hoac"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/loginButton"
        android:gravity="center"
        android:text="@string/don_t_have_an_account"
        android:textColor="#8CAAB9"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/btnSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hoac"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/sign_up"
        android:textColor="#FED36A"
        android:textStyle="bold" />
</androidx.constraintlayout.widget.ConstraintLayout>