<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".ChangePassScreen">

    <TextView
        android:id="@+id/lblWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Thay đổi thông tin"
        android:textColor="#3F51B5"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Quay lại"
        android:textSize="16sp"
        app:icon="@android:drawable/ic_menu_revert"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnChange" />

    <Button
        android:id="@+id/btnChange"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="60dp"
        android:enabled="false"
        android:text="Cập nhật thông tin"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtPassNew2" />

    <EditText
        android:id="@+id/edtName2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:enabled="false"
        android:hint="Họ tên mới"
        android:inputType="text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/chkName"
        app:layout_constraintStart_toStartOf="@+id/chkName"
        app:layout_constraintTop_toBottomOf="@+id/chkName" />

    <EditText
        android:id="@+id/edtEmail2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:enabled="false"
        android:hint="Thư điện tử mới"
        android:inputType="textEmailAddress"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/chkEmail"
        app:layout_constraintStart_toStartOf="@+id/chkEmail"
        app:layout_constraintTop_toBottomOf="@+id/chkEmail" />

    <EditText
        android:id="@+id/edtPassOld"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:enabled="false"
        android:hint="Mật khẩu củ"
        android:inputType="textPassword"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/chkPass"
        app:layout_constraintStart_toStartOf="@+id/chkPass"
        app:layout_constraintTop_toBottomOf="@+id/chkPass" />

    <EditText
        android:id="@+id/edtPassNew1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:enabled="false"
        android:hint="Mật khẩu mới"
        android:inputType="textPassword"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/edtPassOld"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtPassOld"
        app:layout_constraintTop_toBottomOf="@+id/edtPassOld" />

    <EditText
        android:id="@+id/edtPassNew2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:enabled="false"
        android:hint="Lặp lại mật khẩu mới"
        android:inputType="textPassword"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/edtPassNew1"
        app:layout_constraintStart_toStartOf="@+id/edtPassNew1"
        app:layout_constraintTop_toBottomOf="@+id/edtPassNew1" />

    <CheckBox
        android:id="@+id/chkName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Thay đổi họ tên"
        android:textAlignment="viewStart"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblWelcome" />

    <CheckBox
        android:id="@+id/chkEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Thay đổi thư điện tử"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/chkName"
        app:layout_constraintStart_toStartOf="@+id/chkName"
        app:layout_constraintTop_toBottomOf="@+id/edtName2" />

    <CheckBox
        android:id="@+id/chkPass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Thay đổi mật khẩu"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/chkEmail"
        app:layout_constraintStart_toStartOf="@+id/chkEmail"
        app:layout_constraintTop_toBottomOf="@+id/edtEmail2" />
</androidx.constraintlayout.widget.ConstraintLayout>