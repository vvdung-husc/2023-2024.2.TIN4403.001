<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E79C9"
    tools:context=".Login">

    <ImageView
        android:layout_width="176dp"
        android:layout_height="144dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/fmt_image"
        android:src="@drawable/fmt" />

    <EditText
        android:id="@+id/username"
        android:layout_width="387dp"
        android:layout_height="59dp"
        android:layout_below="@id/fmt_image"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:hint="@string/email_phone_username"
        android:padding="20dp"
        android:textStyle="bold"
        android:drawableStart="@drawable/baseline_person_outline_24"
        android:drawablePadding="10dp"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/password_toggle"
        android:layout_width="387dp"
        android:layout_height="59dp"
        android:layout_below="@id/username"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:hint="@string/password"
        android:padding="20dp"
        android:textStyle="bold"
        android:drawableStart="@drawable/baseline_chevron_right_24"
        android:drawablePadding="10dp"
        android:inputType="textPassword"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:id="@+id/quenmatkhau"
        android:layout_below="@+id/password_toggle"
        android:text="@string/forgot_password"
        android:gravity="right"
        android:textColor="#8CAAB9"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded" />

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@+id/quenmatkhau"
        android:layout_centerHorizontal="true"
        android:id="@+id/loginButton"
        android:text="Login"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#FED36A"
        app:cornerRadius="5dp"/>

    <TextView
        android:id="@+id/hoac"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/loginButton"
        android:layout_marginTop="32dp"
        android:text="Don't have an account?"
        android:gravity="center"
        android:textColor="#8CAAB9"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/btnSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hoac"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-2dp"
        android:gravity="center"
        android:text="Sign up"
        android:textColor="#FED36A"
        android:textStyle="bold" />
</RelativeLayout>